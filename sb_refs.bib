	journal = {Applied Vegetation Science},
	author = {Axmanová, Irena and Tichý, Lubomír and Fajmonová, Zuzana and Hájková, Petra and Hettenbergerová, Eva and Li, Ching Feng and Merunková, Kristina and Nejezchlebová, Martina and Otýpková, Zdenka and Vymazalová, Marie and Zelený, David},
