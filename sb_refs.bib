issn = {13142488},
journal = {NeoBiota},
keywords = {Artemisia tridentata,Cheatgrass,Emergence,Germination,Nitrogen,Sagebrush},
pages = {111--125},
title = {{Importance of soil and plant community disturbance for establishment of Bromus tectorum in the Intermountain West, USA}},
