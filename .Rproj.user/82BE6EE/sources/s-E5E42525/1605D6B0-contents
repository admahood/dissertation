#system("sudo apt-get install pdftk")
library(rmarkdown)
source("FF_figs.R")

rmarkdown::render("FF_manuscript.Rmd")
rmarkdown::render("FF_tables.Rmd")
rmarkdown::render("FF_figs.Rmd")
rmarkdown::render("supl.Rmd")



# getting today's data to add to the filename
x=date()
x=strsplit(x," ")[[1]]

if(x[3] == "") d=4 else d=3 # if the date has only one digit there's an empty string

system(paste("pdftk FF_manuscript.pdf FF_tables.pdf FF_figs.pdf supl.pdf cat output submission_3/submission", 
             x[2],x[d],".pdf", sep = "_"))
